@using SpotifyGenerator.Domain.DataTransferObjects
@model List<ArtistDTO>

@* bericht als er geen artiesten zijn gevonden *@
@if (!@Model.Any())
{
    <h2 class="txt"> no artists found </h2>
}

@* lijst van artiesten die zijn gevonden *@
@foreach (var artist in @Model)
{
    <div style="width:400px;height:60px; cursor: pointer;border-bottom: 2px solid #2c2f33">
        <a href="@artist.external_urls.spotify" target="_blank">
            <img src="@artist.images[2].url" style="height:60px;width: 60px;float: left;position: relative;" title="@artist.name" />
        </a>
        <div style="background: #f1f3f4;position: relative;height: 60px;margin-left: 60px;" onclick="AddArtistToList('@artist.name', '@artist.id')">
            <a class="songtxt" style=" position: relative;float: left;margin: 2px;text-decoration: none">@artist.name</a>
            <a class="songtxt" style="position: relative; margin: 2px;float: right;">Followers: @artist.followers.total</a>
        </div>
    </div>
}